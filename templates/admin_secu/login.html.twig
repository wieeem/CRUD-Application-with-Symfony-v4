{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

 {% block monTitre %}   Login
 
 {% endblock %}

{% block body %}
<div style="width: 41%;
    margin-left: 51px;">
{# Cette page va afficher le formulaire de login #}
{# si le mot de passe est incorrecte un message d'erreur sera affich√© a partir du parametre error recu du controller#}
{% if error %}
<div class="alert alert-danger">
{{error.messageKey | trans(error.messagedata,'security')}}
</div>
{% endif %}
<form action="{{path('connexion')}}" method="POST">
<div class="form-group">
<label>Login</label>
<input type="text" required name="_username" class="form-control">
</div>

<div class="form-group">
<label>Password</label>
<input type="password" required name="_password" class="form-control">
</div>
<input type="submit" class="btn btn-primary" value="s'identifier"  style="background: burlywood;
    border: 0px;">
</form>

</div>
{% endblock %}
